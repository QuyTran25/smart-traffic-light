    <!-- ====== Luồng xe tổng hợp (chạy ngẫu nhiên theo tỉ lệ) - KHÔNG có xe ưu tiên ====== -->
    <!-- GIẢM xe từ E0 (Đông) xuống 20% -->
    <flow id="flow_all" type="dist_normal" route="r0" begin="0" end="3600" probability="0.2"/>
    <flow id="flow_all_2" type="dist_normal" route="r1" begin="0" end="3600" probability="0.2"/>
    <flow id="flow_all_3" type="dist_normal" route="r2" begin="0" end="3600" probability="0.2"/>
    <flow id="flow_all_4" type="dist_normal" route="r3" begin="0" end="3600" probability="0.2"/>
